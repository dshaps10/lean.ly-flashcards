<div class="container">
  <% @cards.each_with_index do |card, i| %>
    <div class="form">
    <form method="post" action="/users/<%=@id%>/decks/<%=@deck.id%>">
      <p><strong>Question <%=@range[i]%>.<br> <%= card.question %></strong></p><br>
  		<div class="radio">
  			<input type="radio" name="answer<%=@range[i]%>" value="TRUE" checked> True<br>
  		</div>
  		<div class="radio">
  			<input type="radio" name="answer<%=@range[i]%>" value="FALSE"> False
  		</div>

    </div>
  <% end %>
  <div class="login">
  	<p><input class="submit" type="submit" value="Submit"></p>
  </div>
  	</div>
	</form>
  
</div>
